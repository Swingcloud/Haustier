<header><h1 class="display-4"><%= @pet.name %></h1></header>

<p>Address: <%= @pet.address %></p>
<p>Coordinates: <%= @pet.latitude %> <%= @pet.longitude %></p>

    <div id="map"></div>
    <script>
      function initMap() {
        var myLatLng = {lat: <%= @pet.latitude %>, lng: <%= @pet.longitude %>};

        // Create a map object and specify the DOM element for display.
        var map = new google.maps.Map(document.getElementById('map'), {
          center: myLatLng,
          scrollwheel: false,
          zoom: 15
        });

        // Create a marker and set its position.
        var marker = new google.maps.Marker({
          map: map,
          position: myLatLng,
          title: '<%= @pet.name %>'
        });
      }



    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAenIzCgvNqINyZVd3MoGaCqCDN2bDqFYo&callback=initMap"
        async defer></script>



